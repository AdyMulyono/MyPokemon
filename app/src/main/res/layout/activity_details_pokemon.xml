<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/imgPokemon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        tools:src="@drawable/pokeball"/>
    <TextView
        android:id="@+id/tvPokemonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Pokemon Name"
        app:layout_constraintTop_toBottomOf="@id/imgPokemon"
        android:textAlignment="center"
        android:textSize="30sp"/>
    <LinearLayout
        android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvPokemonName"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="Height : 7 cm"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:text="Weight : 70 Kg"
            android:textAlignment="center"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvAbilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abilities"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/llayout"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvAbilities"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>